<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/joke_item_one__card__root"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginStart="@dimen/eight"
    android:layout_marginTop="@dimen/four"
    android:layout_marginEnd="@dimen/eight"
    android:layout_marginBottom="@dimen/four"
    app:cardCornerRadius="@dimen/eight">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/character_item__tv__character"
            android:layout_width="@dimen/fully_stretchable"
            android:layout_height="@dimen/fully_stretchable"
            android:layout_marginStart="@dimen/eight"
            android:layout_marginEnd="@dimen/eight"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="@string/tv_placeholder_text"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/character_item__iv__image"
            app:layout_constraintEnd_toStartOf="@id/character_item__iv__image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/character_item__iv__image" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/character_item__tv__description"
            android:layout_width="@dimen/fully_stretchable"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eight"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/eight"
            android:layout_marginBottom="@dimen/eight"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/character_item__iv__image"
            tools:text="categories" />

        <ImageView
            android:id="@+id/character_item__iv__image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="@dimen/eight"
            android:contentDescription="@string/default_content_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_marvel_placeholder" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>